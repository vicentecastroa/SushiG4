<p id="notice"><%= notice %></p>

<h3>STOCK</h3>

<table class="table table-striped">
  <thead >
    <tr>
      <th scope="col">SKU</th>
      <th scope="col">NOMBRE</th>
      <th scope="col">CANTIDAD</th>
      <th scope="col">MINIMO</th>
      <th scope="col">FALTANTES</th>
      <th scope="col">PULMON</th>
      <th scope="col">RECEPCION</th>
      <th scope="col">DESPACHO</th>
      <th scope="col">COCINA</th>
      <th scope="col">MULTIUSO 1</th>
      <th scope="col">MULTIUSO 2</th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td><%= @cantidad_almacenes[0] %> / <%= @capacidad_almacenes[0] %></td>
        <td><%= @cantidad_almacenes[1] %> / <%= @capacidad_almacenes[1] %></td>
        <td><%= @cantidad_almacenes[2] %> / <%= @capacidad_almacenes[2] %></td>
        <td><%= @cantidad_almacenes[3] %> / <%= @capacidad_almacenes[3] %></td>
        <td><%= @cantidad_almacenes[4] %> / <%= @capacidad_almacenes[4] %></td>
        <td><%= @cantidad_almacenes[5] %> / <%= @capacidad_almacenes[5] %></td>
      </tr>
  </tbody>

  <tbody>
    <% @stock.each do |product| %>
      <tr>
        <td scope="row"><%= product['sku'] %></td>
        <td><%= product['nombre'] %></td>
        <td><%= product['cantidad'] %></td>
        <td><%= product['stock_minimo'] %></td>
        <td><%= product['faltante'] %></td>
        <td><%= product['cantidadPulmon'] %></td>
        <td><%= product['cantidadRecepcion'] %></td>
        <td><%= product['cantidadDespacho'] %></td>
        <td><%= product['cantidadCocina'] %></td>
        <td><%= product['cantidadMultihuso_1'] %></td>
        <td><%= product['cantidadMultihuso_2'] %></td>

      </tr>
    <% end %>
  </tbody>
</table>